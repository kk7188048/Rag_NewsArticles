{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "excludeFiles": [
        "node_modules/**",
        "data/**",
        "*.json",
        ".cache/**",
        "logs/**",
        "tests/**",
        "docs/**"
      ]
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
